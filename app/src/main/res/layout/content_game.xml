<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.app.edu.mytresenrayaapp.GameActivity"
    tools:showIn="@layout/activity_game"
    android:orientation="vertical"
    android:background="#deeddf">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="0.08"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMensajes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/my_border"
            android:elevation="1dp"
            android:paddingTop="19dp"
            android:text="Bienvenido a mis dominios"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="35dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/bt1"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:elevation="0dp"
                    android:text="-"
                    android:textColor="#ffffff"
                    android:textSize="42sp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_green"/>

                <Button
                    android:id="@+id/bt2"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:text="-"
                    android:textColor="#ffffff"
                    android:textSize="42sp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_green"/>

                <Button
                    android:id="@+id/bt3"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:text="-"
                    android:textColor="#ffffff"
                    android:textSize="42sp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_green"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/bt4"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:text="-"
                    android:textColor="#ffffff"
                    android:textSize="42sp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_green"/>

                <Button
                    android:id="@+id/bt5"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:text="-"
                    android:textColor="#ffffff"
                    android:textSize="42sp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_green"/>

                <Button
                    android:id="@+id/bt6"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:text="-"
                    android:textColor="#ffffff"
                    android:textSize="42sp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_green"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/bt7"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:text="-"
                    android:textColor="#ffffff"
                    android:textSize="42sp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_green"/>

                <Button
                    android:id="@+id/bt8"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:text="-"
                    android:textColor="#ffffff"
                    android:textSize="42sp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_green"/>

                <Button
                    android:id="@+id/bt9"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:text="-"
                    android:textColor="#ffffff"
                    android:textSize="42sp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_green"/>
            </TableRow>

        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btReStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_black"
                android:padding="14dp"
                android:text="Reiniciar"
                android:textSize="20sp"
                android:layout_marginLeft="28dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp" />

            <ToggleButton
                android:id="@+id/tbModoJuego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="28dp"
                android:layout_weight="1"
                android:background="@drawable/button_black"
                android:padding="14dp"
                android:text="PvsIA"
                android:textOff="   P vs P   "
                android:textOn="   P vs IA  "
                android:textSize="20sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</LinearLayout>
